@using LongDistanceService.Web.Routes
@attribute [Route(template: ServiceRoutes.ReferenceInfo)]

<h3>ReferenceInfo</h3>


<div>
    <select>

        @for (int i = 0; i < ReferenceInfoNames.Count; i++)
        {
            <option value="@i">@ReferenceInfoNames[i]</option>
        }

    </select>
</div>

@code {
    private IList<string> ReferenceInfoNames { get; } = ["Категории водителей", "Банки", "Улицы", "Города", "Марки автомобилей", "Модели автомобилей"];

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

}